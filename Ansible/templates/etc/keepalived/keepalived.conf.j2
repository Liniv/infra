! Configuration File for keepalived
global_defs {
    notification_email {
    }

    router_id LVS_SWARMCLUSTER
}

vrrp_script chk_pxc {
    script "DO SOMETHING"
    interval 2
    fall 2
    rise 10
    timeout 60
}

vrrp_instance VI_1 {
    state BACKUP
    nopreempt
    interface bond0
    virtual_router_id 52
    priority {{ KEEPALIVED_PRIORITY }}
    advert_int 1
    track_interface {
        bond0
    }
    track_script {
        chk_pxc
    }
    authentication {
        auth_type PASS
        auth_pass zte-mt1s
    }
    
    unicast_peer {
    10.90.2.41
    10.90.2.42
    10.90.2.51
    10.90.2.52
    10.90.2.61
    10.90.2.62
    10.90.2.71
    }

    virtual_ipaddress {
    10.90.2.111/24
    }
    notify_master "/bin/echo 'now master' > /tmp/keepalived.state"
    notify_backup "/bin/echo 'now backup' > /tmp/keepalived.state"
    notify_fault "/bin/echo 'now fault' > /tmp/keepalived.state"
}